<section>
  <div class="container">
    <div class='row' style="padding:0; margin:0; margin-top: 40px; margin-bottom: 40px;">
      <div class='col-12'>
        <h2>Veuillez vous identifier avec un profil administrateur</h2>
      </div>
    </div>
    <div class="row" style="padding-top:0;">
      <div class="col">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-row mb-1">
            <div class="col">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-minimal', placeholder: 'Courriel' %>
            </div>

            <div class="col">
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-minimal', placeholder: 'Mot de passe' %>
            </div>
          </div>
          <br>
          <%= render "devise/shared/links" %>
          <% if devise_mapping.rememberable? %>
            <div class="col">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          <% end %>
          <div class="form-row mt-3">
            <div class='col'>
              <%= f.submit "Connexion", class: 'btn btn-primary px-5' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>