<div class="modal-width-1 modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header justify-content-end pt-0 pb-0">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body text-center pt-0 pb-0">
      <h3>Approche globale</h3>
      <h4>Informations d'entreprise (1/3)</h4>
      <div class="progress-item">
        <div class="progress">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 33.3333%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"><small class="justify-content-center d-flex position-absolute w-100" style="color:white;">33% d'avancement</small></div>
        </div>
      </div>
      <%= f.hidden_field :approach, value: "1" %>
      <div class = "mt-4">
          <%= f.select(:activity, options_for_select(Activity.pluck(:label, :id), target_blank: true)) %>
      </div>
      <div class = "mt-4">
              <%= f.label "Chiffre d'affaires (M€):"%>
              <button style="border:none; background-color:#FFFFFF;" class="m-0 p-0" type="button" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="right" data-content="Correspond à l'ensemble des ventes du dernier exercice exprimé en millions d'euro.">
                <i class="far fa-xs fa-question-circle qm-color"></i>
              </button>
              <%= f.text_field :ca_globale, class:"form-control", :tabindex => 1  %>
      </div>
      <div class = "mt-4">
              <%= f.label "Nombre total de salariés:" %>
              <button style="border:none; background-color:#FFFFFF;"  class="m-0 p-0" type="button" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="right" data-content="Prend en compte les postes en CDI et en CDD.">
                <i class="far fa-xs fa-question-circle qm-color"></i>
              </button>
              <%= f.number_field :people, class:"form-control", :tabindex => 8  %>
      </div>
      <div class="pt-2 pb-2">
          <button type="button" class="btn btn-primary btn-block" data-dismiss="modal" data-toggle="modal" data-target="#modalGlobalStep2">Etape suivante</button>
      </div>
    </div>
  </div>
</div>

